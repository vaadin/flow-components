    <profiles>
        <profile>
            <id>merged-it</id>
            <activation>
                <property>
                    <name>run-it</name>
                </property>
            </activation>
            <modules>
                <module>integration-tests</module>
            </modules>
            <build>
                <pluginManagement>
                    <plugins>
                        <!-- Enable production mode when running merged ITs -->
                        <plugin>
                            <groupId>org.eclipse.jetty</groupId>
                            <artifactId>jetty-maven-plugin</artifactId>
                            <configuration>
                                <systemProperties>
                                    <systemProperty>
                                        <name>vaadin.productionMode</name>
                                        <value>true</value>
                                    </systemProperty>
                                </systemProperties>
                            </configuration>
                        </plugin>
                        <!-- Build frontend bundle for running merged ITs -->
                        <plugin>
                            <groupId>com.vaadin</groupId>
                            <artifactId>flow-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <goals>
                                        <goal>build-frontend</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
