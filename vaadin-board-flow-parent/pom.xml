		<flow.version>1.2.0</flow.version>
		<testbench.version>6.0.1</testbench.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<modules>
		<module>vaadin-board-flow</module>
		<module>vaadin-board-testbench</module>
		<module>vaadin-board-flow-integration-tests</module>
		<module>vaadin-board-flow-vaadincom-demo</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.vaadin</groupId>
				<artifactId>flow-component-base</artifactId>
				<version>${flow.component.base.version}</version>
				<type>pom</type>
				<scope>import</scope>
